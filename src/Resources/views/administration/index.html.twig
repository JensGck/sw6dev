{% sw_extends '@Administration/administration/index.html.twig' %}

{% block administration_templates %}
    {% if app.environment == "dev" %}
        {% set color =  'green' %}
    {% elseif app.environment == "stage" %}
        {% set color =  'yellow' %}
    {% else %}
        {% set color =  'red' %}
    {% endif %}

    <div style="position: absolute; top: 0; left: 0; width: 100%; height: 5px; font-weight: 600; background-color: {{ color }}; z-index: 800"></div>
    {{ parent() }}

    {# <script nonce="{{ cspNonce }}" src="{{ asset('static/js/jego.js', '@Administration') }}"></script> #}
{% endblock %}

